<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Register</title>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/css/bootstrap.min.css">
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.6.0/dist/jquery.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/js/bootstrap.bundle.min.js"></script>

    <link rel="stylesheet" href="general-arthur.css">

    <style>
        .form-field{
            max-width: 600px;
            width: 80%;
            margin: auto;
        }
        .form-field input[type=checkbox]{
            width: 25px !important;
        }
        button{
            padding: 10px;
        }
    </style>
</head>
<body>
    <%- include('../components/header.ejs') %> 

    <img src="/media/neuschwanstein.jpg" alt="Castle background" class="background">

    <div class="content">
        <div class="frame-body" style="width: 80%; max-width: 920px;">
            <div class="frame-top"></div>
            <div class="frame-content">
                <h3>Create an account</h3>
                <form method="POST" id="register" >
                    <% for(let i=0; i<fields.length; i++){ %>
                        <div class='form-field'<% if(badInputs[i] === true){ %> style="background-color: rgba(255,50,0,0.3);" <% } %>>
                            <p>
                                <%= fields[i].label %>: 
                                <span style='color:red;'>
                                    <%= ((fields[i].required) ? '(Required)': '') %>  
                                </span>
                            </p>
                            <input 
                                type='<%= fields[i].field_type %>' 
                                id='<%= fields[i].id %>' 
                                name='<%= fields[i].id %>' <% if(fieldContents[i] != undefined && fieldContents[i] != ''){ %> 
                                <% if(fields[i].field_type == 'checkbox'){ %> checked <% }else{ %> 
                                value='<%= fieldContents[i] %>'<% }} %> 
                                <%= ((fields[i].required) ? 'required' : '') %> 
                                maxlength='<%= fields[i].max_length %>' 
                                onfocus='this.parentElement.style.backgroundColor = "rgba(0,0,0,0)"'; 
                                style='width:100%'> 
                        </div>
                    <% } %> 
                    <button type="submit">Submit</button>
                    <button type="reset" onclick="return confirm('Do you really want to reset the form?')">Reset</button>
                </form>
            </div>
        </div>
    </div>
    
    <%- include('../components/footer.ejs') %> 
</body>
</html>